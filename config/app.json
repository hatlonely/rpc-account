{
  "http": {
    "port": 80
  },
  "grpc": {
    "port": 6080
  },
  "service": {
    "accountExpiration": "5m",
    "captchaExpiration": "30m"
  },
  "redis": {
    "addr": "127.0.0.1:6379",
    "dialTimeout": "200ms",
    "readTimeout": "200ms",
    "writeTimeout": "200ms",
    "maxRetries": 3,
    "poolSize": 20,
    "db": 0,
    "password": ""
  },
  "mysql": {
    "username": "root",
    "password": "",
    "database": "account",
    "host": "127.0.0.1",
    "port": 3306,
    "connMaxLifeTime": "60s",
    "maxIdleConns": 10,
    "maxOpenConns": 20
  },
  "email": {
    "from": "hatlonely@foxmail.com",
    "password": "123456",
    "server": "smtp.qq.com",
    "port": 25
  },
  "logger": {
    "grpc": {
      "level": "Info",
      "flatMap": true,
      "writers": [{
        "type": "RotateFile",
        "options": {
          "filename": "log/account.rpc",
          "maxAge": "24h",
          "formatter": {
            "type": "Json"
          }
        }
      }, {
        "type": "ElasticSearch",
        "elasticSearchWriter": {
          "index": "grpc",
          "idField": "requestID",
          "timeout": "200ms",
          "msgChanLen": 200,
          "workerNum": 2,
          "elasticSearch": {
            "uri": "http://127.0.0.1:9200"
          }
        }
      }]
    },
    "info": {
      "level": "Info",
      "writers": [{
        "type": "RotateFile",
        "options": {
          "filename": "log/account.rpc",
          "maxAge": "24h",
          "formatter": {
            "type": "Json"
          }
        }
      }]
    }
  }
}